{
  "compilerOptions": {
    "target": "ES6",
    "module": "ES2022",
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "allowJs": true,
    "declaration": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "outDir": "dist",
  },
  "include": ["src/**/*", "vite.config.ts"]
}
